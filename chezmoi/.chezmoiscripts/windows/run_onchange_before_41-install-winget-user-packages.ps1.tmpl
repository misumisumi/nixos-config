{{ if and (eq .chezmoi.os "windows") (hasKey .windows "user") -}}

# Set-ExecutionPolicy
Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope CurrentUser -Force

if (Get-Command * | Where-Object { $_.Name -match "winget" }) {
  {{ range $key, $value := .windows.user.packages.winget.sources -}}
  winget source add {{ $key }} {{ $value }}
  {{ end -}}
  {{ or .windows.user.packages.winget.preCmd "" }}
  {{ if ne .windows.user.packages.winget.apps.sudo nil }}
  sudo winget install `
    --accept-package-agreements `
    --accept-source-agreements `
    --disable-interactivity `
    --exact `
    --no-upgrade `
    --silent `
    {{- range .windows.user.packages.winget.extraOptions }}
    {{ . }} `
    {{- end }}
    {{ .windows.user.packages.winget.apps.sudo | join " `\n    " }}
  {{ end }}
  {{ if ne .windows.user.packages.winget.apps.no_sudo nil }}
  winget install `
    --accept-package-agreements `
    --accept-source-agreements `
    --disable-interactivity `
    --exact `
    --no-upgrade `
    --silent `
    {{- range .windows.user.packages.winget.extraOptions }}
    {{ . }} `
    {{- end }}
    {{ .windows.user.packages.winget.apps.no_sudo | join " `\n    " }}
  {{ end }}
}

Write-Host "Finish installing winget packages for user!"
{{ end }}
